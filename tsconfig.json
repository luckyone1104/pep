{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@desktop": ["src/app/desktop"],
      "@mobile": ["src/app/mobile"],
      "@shared": ["src/app/shared"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  }
}
